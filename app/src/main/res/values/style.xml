<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- info: AppBarLayout -->
    <style name="MyAppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
    </style>

    <!-- info: MaterialToolbar -->
    <style name="MyMaterialToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <!--<item name="navigationIcon">@drawable/ic_arrow_left</item>-->
        <!--<item name="menu">@menu/menu_setting</item>--> <!-- put it manually if needed -->
        <item name="titleCentered">true</item>
        <item name="navigationIconTint">@color/md_theme_onPrimary</item>
        <item name="titleTextColor">@color/md_theme_onPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.Material3.TitleMedium</item>

    </style>

    <!-- info: Search TextInputLayoutStyle-->
    <style name="SearchTextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_marginHorizontal">@dimen/mg_large</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="endIconContentDescription">@string/search</item>
        <item name="endIconDrawable">@drawable/ic_search</item>
        <item name="endIconMode">custom</item>
    </style>

    <!-- info: Search TextInputLayoutStyle-->
    <style name="SearchTextInputEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>