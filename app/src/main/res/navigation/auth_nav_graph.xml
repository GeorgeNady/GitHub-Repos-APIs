<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.george.copticorphanstask.ui.auth.fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_authMethodsFragment"
            app:destination="@id/authMethodsFragment"
            app:popUpTo="@id/auth_nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/authMethodsFragment"
        android:name="com.george.copticorphanstask.ui.auth.fragments.AuthMethodsFragment"
        android:label="AuthMethodsFragment"
        tools:layout="@layout/fragment_auth_methods">
        <action
            android:id="@+id/action_authMethodsFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_authMethodsFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.george.copticorphanstask.ui.auth.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.george.copticorphanstask.ui.auth.fragments.SignupFragment"
        android:label="SignupFragment"
        tools:layout="@layout/fragment_signup" />


</navigation>